
{
  "name": "ai-portfolio",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@google/genai": "^1.34.0",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.1",
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.23.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "build:css": "tailwindcss -i ./styles.css -o ./dist/styles.css --minify",
    "build:js": "esbuild index.tsx --bundle --minify --outfile=dist/index.js --define:process.env.API_KEY='\"$API_KEY\"'",
    "build": "rm -rf dist && mkdir -p dist && cp -r public/* dist/ && cp index.prod.html dist/index.html && npm run build:css && npm run build:js"
  }
}